{
  "Bundle-SymbolicName": "dn_querybuilder",
  "Bundle-Version": "3.1.8-SNAPSHOT",
  "Bundle-Name": "${bundleName}",
  "Bundle-Description": "${bundleDescription}",
  "Bundle-Vendor": "con terra GmbH",
  "Product-Name": "con terra Developer Network",
  "Config-Bundle-Location": "/config",
  "Require-Bundle": [
    {
      "name": "dn_queryplaceholder"
    },
    {
      "name": "dn_querygeometry",
      "policy": "optional"
    },
    {
      "name": "resultcenter"
    },
    {
      "name": "notifier"
    },
    {
      "name": "agssearch"
    }
  ],
  "CSS-Themes-Extension": [
    {
      "name": "*",
      "files": [
        "./styles/styles.css"
      ]
    }
  ],
  "layout-widgets": [
    {
      "role": "userQueryBuilderWidget",
      "window": {
        "title": "${wizard.userWindowTitle}",
        "marginBox": {
          "w": 632,
          "h": 320
        },
        "dockTool": "userQueryBuilderTool",
        "closable": true,
        "minimizeOnClose": true,
        "resizable": true
      }
    },
    {
      "role": "editableQueryBuilderWidget",
      "window": {
        "title": "${wizard.editWindowTitle}",
        "marginBox": {
          "w": 550,
          "h": 274
        },
        "closable": true,
        "minimizeOnClose": true,
        "resizable": true
      },
      "windowevents": {
        "onHide": "deactivateTool"
      }
    }
  ],
  "Components": [
    {
      "name": "MetadataAnalyzer",
      "immediate": true,
      "provides": [
        "dn_querybuilder.MetadataAnalyzer"
      ],
      "references": [
        {
          "name": "_logService",
          "providing": "ct.framework.api.LogService"
        }
      ]
    },
    {
      "name": "QueryTools",
      "impl": "ct.tools.Tool",
      "provides": [
        "ct.tools.Tool"
      ],
      "propertiesConstructor": true,
      "componentFactory": true,
      "properties": {
        "id": "querytool",
        "title": "Query a Store",
        "toolRole": "toolset",
        "iconClass": "icon-info",
        "activateHandler": "onQueryToolActivated",
        "deactivateHandler": "onQueryToolDeactivated",
        "customquery": {},
        "storeId": "*",
        "togglable": true
      },
      "references": [
        {
          "name": "handlerScope",
          "providing": "querybuilder.Query"
        },
        {
          "name": "store",
          "providing": "ct.api.Store",
          "filter": "(id={storeId})"
        }
      ]
    },
    {
      "name": "Query",
      "provides": [
        "querybuilder.Query"
      ],
      "references": [
        {
          "name": "_eventService",
          "providing": "ct.framework.api.EventService"
        },
        {
          "name": "_mapState",
          "providing": "ct.mapping.map.MapState"
        },
        {
          "name": "_dataModel",
          "providing": "ct.resultcenter.DataModel"
        },
        {
          "name": "_logService",
          "providing": "ct.framework.api.LogService"
        },
        {
          "name": "_replacer",
          "providing": "dn_replacer.Replacer"
        },
        {
          "name": "stores",
          "providing": "ct.api.Store",
          "cardinality": "1..n",
          "filter": "(useIn=selection)"
        },
        {
          "name": "_tool",
          "providing": "ct.tools.Tool",
          "cardinality": "0..n",
          "filter": "(toolRole=toolset)"
        },
        {
          "name": "_metadataAnalyzer",
          "providing": "dn_querybuilder.MetadataAnalyzer"
        }
      ]
    },
    {
      "name": "UserQueryBuilderWidgetFactory",
      "provides": [
        "ct.framework.api.EventHandler",
        "dijit.Widget"
      ],
      "properties": {
        "Event-Topics": [
          {
            "topic": "ct/dn_querygeometry/GEOMETRY",
            "method": "saveInputGeometry"
          }
        ],
        "widgetRole": "userQueryBuilderWidget"
      },
      "propertiesConstructor": true,
      "instanceFactory": true,
      "immediate": true,
      "references": [
        {
          "name": "eventService",
          "providing": "ct.framework.api.EventService"
        },
        {
          "name": "stores",
          "providing": "ct.api.Store",
          "cardinality": "1..n",
          "filter": "(useIn=selection)"
        },
        {
          "name": "_mapState",
          "providing": "ct.mapping.map.MapState"
        },
        {
          "name": "_tool",
          "providing": "ct.tools.Tool",
          "filter": "(id=userQueryBuilderTool)"
        },
        {
          "name": "_dataModel",
          "providing": "ct.resultcenter.DataModel"
        },
        {
          "name": "_logService",
          "providing": "ct.framework.api.LogService"
        },
        {
          "name": "_replacer",
          "providing": "dn_replacer.Replacer"
        },
        {
          "name": "_metadataAnalyzer",
          "providing": "dn_querybuilder.MetadataAnalyzer"
        },
        {
          "name": "querygeometryTool",
          "providing": "ct.tools.Tool",
          "filter": "(id=querygeometryTool)",
          "cardinality" : "0..1"
        },
        {
          "name": "drawGeometryHandler",
          "providing": "dn_querygeometry.DrawGeometryHandler",
          "cardinality" : "0..1"
        }
      ]
    },
    {
      "name": "newTool",
      "impl": "ct/tools/Tool",
      "provides": [
        "ct.tools.Tool"
      ],
      "propertiesConstructor": true,
      "properties": {
        "id": "userQueryBuilderTool",
        "toolRole": "toolset",
        "title": "${wizard.toolTitle}",
        "tooltip": "${wizard.toolToolTip}",
        "togglable": true,
        "iconClass": "icon-custom-info-help"
      }
    }
  ]
}
